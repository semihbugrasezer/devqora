---
export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  author?: string;
  canonical?: string;
  image?: string;
}

const { 
  title, 
  description = "Ultimate gaming guides, reviews, and tips for gamers", 
  keywords = "gaming, guides, reviews, tips, pc gaming, console gaming",
  author = "PlayU Team",
  canonical,
  image = "/assets/og-image.jpg"
} = Astro.props;

const currentUrl = canonical || Astro.url.href;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={author} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={currentUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />

    <!-- Canonical URL -->
    <link rel="canonical" href={currentUrl} />

    <title>{title}</title>

    <!-- Gaming-themed CSS -->
    <style>
      *, *::before, *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        scroll-behavior: smooth;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Gaming Font', sans-serif;
        line-height: 1.6;
      }

      body {
        background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 50%, #16213e 100%);
        min-height: 100vh;
        color: #e2e8f0;
        overflow-x: hidden;
      }

      /* Gaming Glow Effects */
      .glow {
        box-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
      }

      .glow-hover:hover {
        box-shadow: 0 0 30px rgba(0, 255, 255, 0.6);
        transform: translateY(-2px);
        transition: all 0.3s ease;
      }

      /* Mobile First Responsive Design */
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
      }

      @media (min-width: 768px) {
        .container {
          padding: 0 2rem;
        }
      }

      /* Header Styles */
      .header {
        background: rgba(15, 15, 35, 0.95);
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 6px -1px rgba(0, 255, 255, 0.2);
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        transition: all 0.3s ease;
        border-bottom: 1px solid rgba(0, 255, 255, 0.3);
      }

      .nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 0;
      }

      .logo {
        font-size: 1.8rem;
        font-weight: 700;
        color: #00ffff;
        text-decoration: none;
        transition: all 0.3s ease;
        text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
      }

      .logo:hover {
        color: #00ff88;
        text-shadow: 0 0 20px rgba(0, 255, 136, 0.8);
      }

      .nav-menu {
        display: none;
        list-style: none;
        gap: 2rem;
      }

      .nav-menu a {
        text-decoration: none;
        color: #cbd5e0;
        font-weight: 500;
        transition: all 0.3s ease;
        position: relative;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
      }

      .nav-menu a:hover {
        color: #00ffff;
        background: rgba(0, 255, 255, 0.1);
        box-shadow: 0 0 15px rgba(0, 255, 255, 0.3);
      }

      @media (min-width: 768px) {
        .nav-menu {
          display: flex;
        }
      }

      /* Mobile Menu */
      .mobile-menu-btn {
        display: block;
        background: none;
        border: none;
        cursor: pointer;
        padding: 0.5rem;
        color: #00ffff;
      }

      @media (min-width: 768px) {
        .mobile-menu-btn {
          display: none;
        }
      }

      .mobile-menu {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: rgba(15, 15, 35, 0.98);
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 6px -1px rgba(0, 255, 255, 0.2);
        padding: 1rem;
        border-bottom: 1px solid rgba(0, 255, 255, 0.3);
      }

      .mobile-menu.active {
        display: block;
      }

      .mobile-menu ul {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .mobile-menu a {
        text-decoration: none;
        color: #cbd5e0;
        font-weight: 500;
        padding: 0.75rem;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
      }

      .mobile-menu a:hover {
        background: rgba(0, 255, 255, 0.1);
        color: #00ffff;
        box-shadow: 0 0 15px rgba(0, 255, 255, 0.3);
      }

      /* Main Content */
      .main-content {
        margin-top: 80px;
        min-height: calc(100vh - 80px);
      }

      /* Hero Section */
      .hero {
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.1) 0%, rgba(0, 255, 136, 0.1) 100%);
        padding: 4rem 0;
        text-align: center;
        position: relative;
        overflow: hidden;
      }

      .hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%2300ffff' fill-opacity='0.1'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
        animation: float 20s ease-in-out infinite;
      }

      @keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-20px); }
      }

      .hero h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #00ffff 0%, #00ff88 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 0 30px rgba(0, 255, 255, 0.3);
        position: relative;
        z-index: 1;
      }

      @media (min-width: 768px) {
        .hero h1 {
          font-size: 3.5rem;
        }
      }

      .hero p {
        font-size: 1.125rem;
        color: #a0aec0;
        max-width: 600px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
      }

      /* Card Styles */
      .card {
        background: linear-gradient(145deg, rgba(26, 32, 44, 0.8), rgba(45, 55, 72, 0.8));
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.3);
        transition: all 0.3s ease;
        margin-bottom: 2rem;
        border: 1px solid rgba(0, 255, 255, 0.2);
        backdrop-filter: blur(10px);
      }

      .card:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.4), 0 0 30px rgba(0, 255, 255, 0.3);
        border-color: rgba(0, 255, 255, 0.5);
      }

      /* Button Styles */
      .btn {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        cursor: pointer;
        border: none;
        position: relative;
        overflow: hidden;
      }

      .btn-primary {
        background: linear-gradient(135deg, #00ffff 0%, #00ff88 100%);
        color: #0f0f23;
        box-shadow: 0 4px 15px rgba(0, 255, 255, 0.3);
      }

      .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 255, 255, 0.4);
        color: #0f0f23;
      }

      .btn-secondary {
        background: transparent;
        color: #00ffff;
        border: 2px solid #00ffff;
      }

      .btn-secondary:hover {
        background: rgba(0, 255, 255, 0.1);
        box-shadow: 0 0 20px rgba(0, 255, 255, 0.4);
      }

      /* Footer */
      .footer {
        background: linear-gradient(145deg, #0f0f23, #1a1a2e);
        color: #a0aec0;
        padding: 3rem 0 1rem;
        margin-top: 4rem;
        border-top: 1px solid rgba(0, 255, 255, 0.3);
      }

      .footer-content {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        margin-bottom: 2rem;
      }

      @media (min-width: 768px) {
        .footer-content {
          grid-template-columns: repeat(3, 1fr);
        }
      }

      .footer h3 {
        color: #00ffff;
        margin-bottom: 1rem;
        font-size: 1.125rem;
      }

      .footer ul {
        list-style: none;
      }

      .footer ul li {
        margin-bottom: 0.5rem;
      }

      .footer a {
        color: #cbd5e0;
        text-decoration: none;
        transition: color 0.3s ease;
      }

      .footer a:hover {
        color: #00ffff;
        text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
      }

      .footer-bottom {
        border-top: 1px solid rgba(0, 255, 255, 0.3);
        padding-top: 1rem;
        text-align: center;
        color: #718096;
      }

      /* Gaming-themed Ad Containers */
      .ad-container {
        margin: 2rem 0;
        text-align: center;
        position: relative;
      }

      .ad-container[data-ad-slot] {
        min-height: 280px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(145deg, rgba(15, 15, 35, 0.3), rgba(26, 32, 44, 0.3));
        border: 1px dashed rgba(0, 255, 255, 0.3);
        border-radius: 0.5rem;
        backdrop-filter: blur(5px);
      }

      /* Loading Animation */
      .loading {
        display: inline-block;
        width: 2rem;
        height: 2rem;
        border: 3px solid rgba(0, 255, 255, 0.3);
        border-radius: 50%;
        border-top-color: #00ffff;
        animation: spin 1s ease-in-out infinite;
      }

      @keyframes spin {
        to {
          transform: rotate(360deg);
        }
      }

      /* Gaming Utility Classes */
      .text-center { text-align: center; }
      .text-left { text-align: left; }
      .text-right { text-align: right; }
      .mb-1 { margin-bottom: 0.25rem; }
      .mb-2 { margin-bottom: 0.5rem; }
      .mb-4 { margin-bottom: 1rem; }
      .mb-8 { margin-bottom: 2rem; }
      .mt-4 { margin-top: 1rem; }
      .mt-8 { margin-top: 2rem; }
      .p-4 { padding: 1rem; }
      .rounded { border-radius: 0.5rem; }
      .shadow { box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3); }
      
      .gaming-glow {
        box-shadow: 0 0 20px rgba(0, 255, 255, 0.4);
      }
    </style>
  </head>

  <body>
    <!-- Header -->
    <header class="header">
      <nav class="container">
        <div class="nav">
          <a href="/" class="logo">PlayU.co</a>
          
          <ul class="nav-menu">
            <li><a href="/">Home</a></li>
            <li><a href="/guides">Guides</a></li>
            <li><a href="/reviews">Reviews</a></li>
            <li><a href="/news">News</a></li>
            <li><a href="/builds">PC Builds</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>

          <button class="mobile-menu-btn" onclick="toggleMobileMenu()">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
          </button>
        </div>

        <div class="mobile-menu" id="mobileMenu">
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/guides">Guides</a></li>
            <li><a href="/reviews">Reviews</a></li>
            <li><a href="/news">News</a></li>
            <li><a href="/builds">PC Builds</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="main-content">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="footer">
      <div class="container">
        <div class="footer-content">
          <div>
            <h3>About PlayU</h3>
            <p>Your ultimate destination for gaming guides, reviews, and the latest gaming news.</p>
          </div>
          <div>
            <h3>Gaming Categories</h3>
            <ul>
              <li><a href="/pc-gaming">PC Gaming</a></li>
              <li><a href="/console-gaming">Console Gaming</a></li>
              <li><a href="/mobile-gaming">Mobile Gaming</a></li>
              <li><a href="/esports">Esports</a></li>
            </ul>
          </div>
          <div>
            <h3>Community</h3>
            <ul>
              <li><a href="/discord">Discord</a></li>
              <li><a href="/youtube">YouTube</a></li>
              <li><a href="/twitter">Twitter</a></li>
              <li><a href="/reddit">Reddit</a></li>
            </ul>
          </div>
        </div>
        <div class="footer-bottom">
          <p>&copy; 2024 PlayU.co. Level up your gaming experience.</p>
        </div>
      </div>
    </footer>

    <!-- JavaScript -->
    <script>
      function toggleMobileMenu() {
        const menu = document.getElementById('mobileMenu');
        menu.classList.toggle('active');
      }

      // Close mobile menu when clicking outside
      document.addEventListener('click', function(event) {
        const menu = document.getElementById('mobileMenu');
        const btn = document.querySelector('.mobile-menu-btn');
        
        if (!menu.contains(event.target) && !btn.contains(event.target)) {
          menu.classList.remove('active');
        }
      });

      // Smooth scroll for anchor links
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });

      // Header scroll effect
      let lastScrollTop = 0;
      const header = document.querySelector('.header');
      
      window.addEventListener('scroll', function() {
        let scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        
        if (scrollTop > lastScrollTop && scrollTop > 100) {
          header.style.transform = 'translateY(-100%)';
        } else {
          header.style.transform = 'translateY(0)';
        }
        
        lastScrollTop = scrollTop;
      });

      // Gaming effects
      document.addEventListener('mousemove', function(e) {
        const cursor = document.createElement('div');
        cursor.className = 'cursor-glow';
        cursor.style.cssText = `
          position: absolute;
          width: 10px;
          height: 10px;
          background: radial-gradient(circle, rgba(0,255,255,0.8) 0%, rgba(0,255,255,0) 70%);
          border-radius: 50%;
          pointer-events: none;
          left: ${e.clientX - 5}px;
          top: ${e.clientY - 5}px;
          animation: fade-out 2s ease-out forwards;
          z-index: 9999;
        `;
        document.body.appendChild(cursor);

        setTimeout(() => {
          cursor.remove();
        }, 2000);
      });

      // Add fade-out animation
      const style = document.createElement('style');
      style.textContent = `
        @keyframes fade-out {
          from { opacity: 1; transform: scale(1); }
          to { opacity: 0; transform: scale(0); }
        }
      `;
      document.head.appendChild(style);
    </script>

    <!-- Google AdSense -->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7970408813538482"
            crossorigin="anonymous"></script>
  </body>
</html>