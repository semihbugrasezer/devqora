---
export interface Props {
  slot: string;
  format?: string;
  style?: string;
  responsive?: boolean;
  className?: string;
}

const { 
  slot, 
  format = "auto", 
  style = "display:block", 
  responsive = true,
  className = ""
} = Astro.props;

const adClass = `gaming-ad-unit ${className}`.trim();
---

<div class={adClass}>
  <ins class="adsbygoogle gaming-ad"
       style={style}
       data-ad-client="ca-pub-7970408813538482"
       data-ad-slot={slot}
       data-ad-format={format}
       data-full-width-responsive={responsive.toString()}>
  </ins>
</div>

<script>
  // AdSense Auto Ads with gaming optimization
  (adsbygoogle = window.adsbygoogle || []).push({});
</script>

<style>
  .gaming-ad-unit {
    margin: 2rem 0;
    text-align: center;
    position: relative;
  }

  .gaming-ad-unit ins {
    display: block;
    text-decoration: none;
    overflow: hidden;
  }

  /* Gaming-themed ad styling */
  .gaming-ad {
    background: linear-gradient(145deg, rgba(15, 15, 35, 0.3), rgba(26, 32, 44, 0.3));
    border: 1px solid rgba(0, 255, 255, 0.3);
    border-radius: 0.5rem;
    backdrop-filter: blur(5px);
    transition: all 0.3s ease;
  }

  .gaming-ad:hover {
    border-color: rgba(0, 255, 255, 0.6);
    box-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
  }

  /* Responsive ad containers */
  @media (max-width: 768px) {
    .gaming-ad-unit {
      margin: 1rem 0;
    }
  }

  /* Gaming ad unit variations */
  .gaming-ad-unit.banner {
    width: 100%;
    max-width: 728px;
    height: 90px;
    margin: 2rem auto;
  }

  .gaming-ad-unit.rectangle {
    width: 300px;
    height: 250px;
    margin: 2rem auto;
  }

  .gaming-ad-unit.leaderboard {
    width: 100%;
    max-width: 728px;
    height: 90px;
    margin: 2rem auto;
  }

  .gaming-ad-unit.sidebar {
    width: 160px;
    height: 600px;
    margin: 1rem auto;
  }

  .gaming-ad-unit.mobile-banner {
    width: 320px;
    height: 50px;
    margin: 1rem auto;
  }

  .gaming-ad-unit.square {
    width: 250px;
    height: 250px;
    margin: 2rem auto;
  }

  .gaming-ad-unit.gaming-footer {
    width: 100%;
    max-width: 970px;
    height: 90px;
    margin: 2rem auto;
    background: linear-gradient(135deg, rgba(0, 255, 255, 0.1) 0%, rgba(0, 255, 136, 0.1) 100%);
  }

  /* Sticky gaming ads */
  .gaming-ad-unit.sticky-bottom {
    position: fixed;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    background: linear-gradient(145deg, #0f0f23, #1a1a2e);
    box-shadow: 0 -2px 20px rgba(0, 255, 255, 0.3);
    width: 100%;
    max-width: 728px;
    padding: 0.5rem;
    border-top: 2px solid rgba(0, 255, 255, 0.5);
    border-radius: 1rem 1rem 0 0;
  }

  .gaming-ad-unit.sticky-top {
    position: sticky;
    top: 80px;
    z-index: 100;
    margin: 1rem 0;
    background: rgba(15, 15, 35, 0.9);
    backdrop-filter: blur(10px);
    border-radius: 0.5rem;
  }

  .gaming-ad-unit.floating-corner {
    position: fixed;
    top: 50%;
    right: 1rem;
    transform: translateY(-50%);
    z-index: 100;
    width: 160px;
    height: 600px;
  }

  @media (max-width: 768px) {
    .gaming-ad-unit.sticky-bottom {
      max-width: 320px;
      padding: 0.25rem;
    }
    
    .gaming-ad-unit.floating-corner {
      display: none;
    }
  }

  @media (max-width: 1200px) {
    .gaming-ad-unit.floating-corner {
      display: none;
    }
  }

  /* Gaming glow effects for ads */
  .gaming-ad-unit.glow-cyan {
    box-shadow: 0 0 20px rgba(0, 255, 255, 0.4);
  }

  .gaming-ad-unit.glow-green {
    box-shadow: 0 0 20px rgba(0, 255, 136, 0.4);
  }

  .gaming-ad-unit.pulse {
    animation: pulse-glow 2s ease-in-out infinite alternate;
  }

  @keyframes pulse-glow {
    from {
      box-shadow: 0 0 10px rgba(0, 255, 255, 0.3);
    }
    to {
      box-shadow: 0 0 30px rgba(0, 255, 255, 0.6);
    }
  }

  /* Special gaming tournament ad styling */
  .gaming-ad-unit.tournament {
    background: linear-gradient(145deg, rgba(255, 215, 0, 0.1), rgba(255, 69, 0, 0.1));
    border: 2px solid rgba(255, 215, 0, 0.5);
    box-shadow: 0 0 30px rgba(255, 215, 0, 0.3);
  }

  .gaming-ad-unit.tournament:hover {
    box-shadow: 0 0 40px rgba(255, 215, 0, 0.5);
    transform: scale(1.02);
  }
</style>