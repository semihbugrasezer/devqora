---
// /srv/auto-adsense/multidomain_site_kit/sites/hing.me/src/pages/articles/index.astro
import ModernBase from '@mdkit/shared/src/layouts/ModernBase.astro'
import ModernAdSlot from '@mdkit/shared/src/components/ModernAdSlot.astro'
import config from '../../config.json'

const cfg = config['hing.me']
const title = "Finance Articles & Guides | Hing.me"
const description = "Expert finance articles, investment guides, and money management tips to help you build wealth and make smarter financial decisions."

// Get all articles dynamically
const allArticles = await Astro.glob('./**.astro')
const articles = allArticles
  .filter(article => article.url !== '/articles/')
  .map(article => {
    const slug = article.url?.replace('/articles/', '').replace('/', '') || ''
    const title = slug.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase())
    return {
      title,
      url: article.url,
      excerpt: `Expert guidance on ${title.toLowerCase()}. Get professional insights and actionable advice.`
    }
  })
  .slice(0, 12) // Limit to 12 articles
---

<ModernBase 
  title={title} 
  description={description} 
  locale={cfg.locale} 
  adsenseClient={cfg.adsense_client}
  niche="finance"
>
  <!-- Hero Section -->
  <section style="background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%); padding: 80px 0; color: white;">
    <div class="container" style="text-align: center;">
      <h1 style="font-size: clamp(36px, 5vw, 56px); font-weight: 900; margin-bottom: 24px; line-height: 1.1;">
        üìö Finance Articles & Guides
      </h1>
      <p style="font-size: 20px; margin-bottom: 40px; opacity: 0.9; max-width: 600px; margin-left: auto; margin-right: auto;">
        Expert insights, actionable strategies, and professional guidance to help you master your finances
      </p>
    </div>
  </section>

  <!-- Header Ad -->
  <div class="container">
    <ModernAdSlot 
      client={cfg.adsense_client} 
      slot={cfg.adsense_slots.header} 
      layout="header"
    />
  </div>

  <!-- Articles Grid -->
  <section style="padding: 80px 0;">
    <div class="container">
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); gap: 32px;">
        {articles.map((article) => (
          <article style="background: white; border-radius: 16px; overflow: hidden; box-shadow: 0 4px 20px rgba(0,0,0,0.08); border: 1px solid #e5e7eb; transition: all 0.3s ease;" class="article-card">
            <div style="padding: 32px;">
              <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 16px;">
                <span style="background: linear-gradient(135deg, #22c55e, #16a34a); color: white; padding: 6px 12px; border-radius: 8px; font-size: 12px; font-weight: 600;">
                  üí∞ FINANCE
                </span>
                <span style="color: #64748b; font-size: 12px;">
                  5 min read
                </span>
              </div>
              
              <h2 style="font-size: 22px; font-weight: 700; color: #0f172a; margin-bottom: 12px; line-height: 1.3;">
                {article.title}
              </h2>
              
              <p style="color: #64748b; margin-bottom: 24px; line-height: 1.6;">
                {article.excerpt}
              </p>
              
              <a href={article.url} class="btn" style="background: #2563eb; width: 100%; text-align: center; justify-content: center; display: flex; align-items: center; gap: 8px;">
                Read Article ‚Üí
              </a>
            </div>
          </article>
        ))}
      </div>

      <!-- In-Article Ad -->
      <div style="margin: 64px 0;">
        <ModernAdSlot 
          client={cfg.adsense_client} 
          slot={cfg.adsense_slots.in_article} 
          layout="in-article"
        />
      </div>

      <!-- Featured Tools Section -->
      <div style="margin-top: 80px; background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%); padding: 64px; border-radius: 24px; text-align: center;">
        <h2 style="font-size: 32px; font-weight: 800; color: #0f172a; margin-bottom: 16px;">
          üõ†Ô∏è Popular Financial Tools
        </h2>
        <p style="color: #64748b; margin-bottom: 32px; font-size: 16px;">
          Professional calculators to help you make better financial decisions
        </p>
        
        <div style="display: flex; gap: 16px; justify-content: center; flex-wrap: wrap;">
          <a href="/calculators/mortgage" class="btn" style="background: linear-gradient(135deg, #2563eb, #1d4ed8);">
            üè† Mortgage Calculator
          </a>
          <a href="/calculators/investment" class="btn" style="background: linear-gradient(135deg, #16a34a, #15803d);">
            üìà Investment Calculator
          </a>
          <a href="/calculators/loan" class="btn" style="background: linear-gradient(135deg, #dc2626, #b91c1c);">
            üí≥ Loan Calculator
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer Ad -->
  <div class="container">
    <ModernAdSlot 
      client={cfg.adsense_client} 
      slot={cfg.adsense_slots.footer} 
      layout="footer"
    />
  </div>
</ModernBase>

<style>
  .article-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 32px rgba(0,0,0,0.12);
  }
  
  .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.2);
  }
  
  @media (max-width: 768px) {
    .container {
      padding: 0 20px;
    }
  }
</style>
