---
// /srv/auto-adsense/multidomain_site_kit/sites/hing.me/src/pages/index.astro
import ModernBase from '@mdkit/shared/src/layouts/ModernBase.astro'
import ModernAdSlot from '@mdkit/shared/src/components/ModernAdSlot.astro'
import MortgageCalculator from '@mdkit/shared/src/components/MortgageCalculator.astro'
import config from '../config.json'

const cfg = config['hing.me']
const title = cfg.title
const description = cfg.description
---

<ModernBase 
  title={title} 
  description={description} 
  locale={cfg.locale} 
  adsenseClient={cfg.adsense_client}
  niche="finance"
>
  <!-- Hero Section -->
  <section style="background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%); padding: 100px 0; color: white; position: relative; overflow: hidden;">
    <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: url('data:image/svg+xml,<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 100 100\"><defs><pattern id=\"grain\" width=\"100\" height=\"100\" patternUnits=\"userSpaceOnUse\"><circle cx=\"50\" cy=\"50\" r=\"1\" fill=\"%23ffffff\" opacity=\"0.1\"/></pattern></defs><rect width=\"100\" height=\"100\" fill=\"url(%23grain)\"/></svg>'); opacity: 0.1;"></div>
    
    <div class="container" style="text-align: center; position: relative; z-index: 2;">
      <div style="margin-bottom: 32px;">
        <span style="background: linear-gradient(135deg, #22c55e, #16a34a); padding: 8px 24px; border-radius: 50px; font-size: 14px; font-weight: 600; text-transform: uppercase; letter-spacing: 1px;">
          💎 Premium Finance Tools
        </span>
      </div>
      
      <h1 style="font-size: clamp(36px, 6vw, 64px); font-weight: 900; margin-bottom: 24px; line-height: 1.1;">
        Master Your Money<br/>
        <span style="background: linear-gradient(45deg, #fbbf24, #f59e0b); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
          Build Real Wealth
        </span>
      </h1>
      
      <p style="font-size: 22px; margin-bottom: 40px; opacity: 0.9; max-width: 700px; margin-left: auto; margin-right: auto; line-height: 1.5;">
        Professional-grade calculators, investment guides, and wealth-building strategies trusted by financial advisors.
      </p>
      
      <div style="display: flex; gap: 20px; justify-content: center; flex-wrap: wrap; margin-bottom: 48px;">
        <a href="#tools" class="btn" style="font-size: 18px; padding: 18px 36px; background: linear-gradient(135deg, #22c55e, #16a34a);">
          💰 Free Calculator
        </a>
        <a href="/articles" class="btn" style="background: rgba(255,255,255,0.15); border: 2px solid rgba(255,255,255,0.3); backdrop-filter: blur(10px);">
          📚 Read Articles
        </a>
      </div>
      
      <!-- Trust Indicators -->
      <div style="display: flex; justify-content: center; gap: 32px; flex-wrap: wrap; opacity: 0.8;">
        <div style="display: flex; align-items: center; gap: 8px;">
          <span style="font-size: 20px;">✅</span>
          <span style="font-size: 14px;">Bank-Level Accuracy</span>
        </div>
        <div style="display: flex; align-items: center; gap: 8px;">
          <span style="font-size: 20px;">🔒</span>
          <span style="font-size: 14px;">100% Secure</span>
        </div>
        <div style="display: flex; align-items: center; gap: 8px;">
          <span style="font-size: 20px;">⚡</span>
          <span style="font-size: 14px;">Instant Results</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Header Ad -->
  <div class="container">
    <ModernAdSlot 
      client={cfg.adsense_client} 
      slot={cfg.adsense_slots.header} 
      layout="header"
    />
  </div>

  <!-- Calculator Section -->
  <section id="tools" style="padding: 100px 0; background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);">
    <div class="container">
      <div style="text-align: center; margin-bottom: 64px;">
        <h2 style="font-size: 48px; font-weight: 800; color: #0f172a; margin-bottom: 20px; line-height: 1.2;">
          🎯 Professional Mortgage Calculator
        </h2>
        <p style="font-size: 20px; color: #64748b; max-width: 600px; margin: 0 auto;">
          Get precise payment estimates used by real estate professionals. No signup required.
        </p>
      </div>
      
      <MortgageCalculator theme="finance" />
      
      <!-- Calculator Features -->
      <div style="margin-top: 64px; display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 24px;">
        <div style="text-align: center; padding: 24px;">
          <div style="font-size: 32px; margin-bottom: 12px;">⚡</div>
          <h3 style="font-size: 18px; font-weight: 600; color: #0f172a; margin-bottom: 8px;">Real-Time Results</h3>
          <p style="color: #64748b; font-size: 14px;">Updates as you type</p>
        </div>
        <div style="text-align: center; padding: 24px;">
          <div style="font-size: 32px; margin-bottom: 12px;">🎯</div>
          <h3 style="font-size: 18px; font-weight: 600; color: #0f172a; margin-bottom: 8px;">Bank Accurate</h3>
          <p style="color: #64748b; font-size: 14px;">Industry-standard formulas</p>
        </div>
        <div style="text-align: center; padding: 24px;">
          <div style="font-size: 32px; margin-bottom: 12px;">📊</div>
          <h3 style="font-size: 18px; font-weight: 600; color: #0f172a; margin-bottom: 8px;">Full Reports</h3>
          <p style="color: #64748b; font-size: 14px;">Detailed payment breakdown</p>
        </div>
        <div style="text-align: center; padding: 24px;">
          <div style="font-size: 32px; margin-bottom: 12px;">💎</div>
          <h3 style="font-size: 18px; font-weight: 600; color: #0f172a; margin-bottom: 8px;">Premium Features</h3>
          <p style="color: #64748b; font-size: 14px;">Advanced scenarios</p>
        </div>
      </div>
    </div>
  </section>

  <!-- In-Article Ad -->
  <div class="container">
    <ModernAdSlot 
      client={cfg.adsense_client} 
      slot={cfg.adsense_slots.in_article} 
      layout="in-article"
    />
  </div>

  <!-- High-Value Content Section -->
  <section style="padding: 100px 0;">
    <div class="container">
      <div style="text-align: center; margin-bottom: 64px;">
        <h2 style="font-size: 42px; font-weight: 800; color: #0f172a; margin-bottom: 20px;">
          💼 Professional Financial Tools
        </h2>
        <p style="font-size: 18px; color: #64748b; max-width: 600px; margin: 0 auto;">
          Everything you need to make informed financial decisions
        </p>
      </div>

      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); gap: 32px;">
        <!-- Mortgage Tools -->
        <div style="background: white; padding: 40px; border-radius: 20px; box-shadow: 0 8px 32px rgba(0,0,0,0.1); border: 1px solid #e5e7eb; transition: all 0.3s ease;">
          <div style="width: 80px; height: 80px; background: linear-gradient(135deg, #2563eb, #1d4ed8); border-radius: 20px; display: flex; align-items: center; justify-content: center; margin-bottom: 24px; font-size: 36px;">
            🏠
          </div>
          <h3 style="font-size: 24px; font-weight: 700; margin-bottom: 16px; color: #0f172a;">
            Mortgage Center
          </h3>
          <p style="color: #64748b; line-height: 1.6; margin-bottom: 24px;">
            Calculate payments, compare rates, and explore refinancing options with professional-grade tools.
          </p>
          <ul style="list-style: none; margin-bottom: 24px;">
            <li style="display: flex; align-items: center; gap: 8px; margin-bottom: 8px;">
              <span style="color: #22c55e;">✓</span>
              <span style="color: #64748b; font-size: 14px;">Payment Calculator</span>
            </li>
            <li style="display: flex; align-items: center; gap: 8px; margin-bottom: 8px;">
              <span style="color: #22c55e;">✓</span>
              <span style="color: #64748b; font-size: 14px;">Refinance Analyzer</span>
            </li>
            <li style="display: flex; align-items: center; gap: 8px;">
              <span style="color: #22c55e;">✓</span>
              <span style="color: #64748b; font-size: 14px;">Amortization Schedule</span>
            </li>
          </ul>
          <a href="/calculators/mortgage" class="btn" style="width: 100%; text-align: center; background: #2563eb;">
            Explore Tools →
          </a>
        </div>

        <!-- Investment Tools -->
        <div style="background: white; padding: 40px; border-radius: 20px; box-shadow: 0 8px 32px rgba(0,0,0,0.1); border: 1px solid #e5e7eb; transition: all 0.3s ease;">
          <div style="width: 80px; height: 80px; background: linear-gradient(135deg, #16a34a, #15803d); border-radius: 20px; display: flex; align-items: center; justify-content: center; margin-bottom: 24px; font-size: 36px;">
            📈
          </div>
          <h3 style="font-size: 24px; font-weight: 700; margin-bottom: 16px; color: #0f172a;">
            Investment Hub
          </h3>
          <p style="color: #64748b; line-height: 1.6; margin-bottom: 24px;">
            Build wealth with compound interest calculators, portfolio analyzers, and retirement planning tools.
          </p>
          <ul style="list-style: none; margin-bottom: 24px;">
            <li style="display: flex; align-items: center; gap: 8px; margin-bottom: 8px;">
              <span style="color: #22c55e;">✓</span>
              <span style="color: #64748b; font-size: 14px;">Compound Interest</span>
            </li>
            <li style="display: flex; align-items: center; gap: 8px; margin-bottom: 8px;">
              <span style="color: #22c55e;">✓</span>
              <span style="color: #64748b; font-size: 14px;">Retirement Planner</span>
            </li>
            <li style="display: flex; align-items: center; gap: 8px;">
              <span style="color: #22c55e;">✓</span>
              <span style="color: #64748b; font-size: 14px;">Portfolio Tracker</span>
            </li>
          </ul>
          <a href="/calculators/investment" class="btn" style="width: 100%; text-align: center; background: #16a34a;">
            Start Building →
          </a>
        </div>

        <!-- Credit & Loans -->
        <div style="background: white; padding: 40px; border-radius: 20px; box-shadow: 0 8px 32px rgba(0,0,0,0.1); border: 1px solid #e5e7eb; transition: all 0.3s ease;">
          <div style="width: 80px; height: 80px; background: linear-gradient(135deg, #dc2626, #b91c1c); border-radius: 20px; display: flex; align-items: center; justify-content: center; margin-bottom: 24px; font-size: 36px;">
            💳
          </div>
          <h3 style="font-size: 24px; font-weight: 700; margin-bottom: 16px; color: #0f172a;">
            Credit & Loans
          </h3>
          <p style="color: #64748b; line-height: 1.6; margin-bottom: 24px;">
            Optimize your debt, improve credit scores, and find the best loan terms with our advanced calculators.
          </p>
          <ul style="list-style: none; margin-bottom: 24px;">
            <li style="display: flex; align-items: center; gap: 8px; margin-bottom: 8px;">
              <span style="color: #22c55e;">✓</span>
              <span style="color: #64748b; font-size: 14px;">Loan Calculator</span>
            </li>
            <li style="display: flex; align-items: center; gap: 8px; margin-bottom: 8px;">
              <span style="color: #22c55e;">✓</span>
              <span style="color: #64748b; font-size: 14px;">Debt Payoff Planner</span>
            </li>
            <li style="display: flex; align-items: center; gap: 8px;">
              <span style="color: #22c55e;">✓</span>
              <span style="color: #64748b; font-size: 14px;">Credit Score Tools</span>
            </li>
          </ul>
          <a href="/calculators/loan" class="btn" style="width: 100%; text-align: center; background: #dc2626;">
            Optimize Debt →
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Social Proof -->
  <section style="padding: 80px 0; background: #f8fafc;">
    <div class="container">
      <div style="text-align: center; margin-bottom: 48px;">
        <h2 style="font-size: 36px; font-weight: 700; color: #0f172a; margin-bottom: 16px;">
          🌟 Trusted by Financial Professionals
        </h2>
        <p style="color: #64748b;">Join thousands of users making smarter financial decisions</p>
      </div>
      
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 32px; text-align: center;">
        <div>
          <div style="font-size: 48px; font-weight: 800; color: #2563eb; margin-bottom: 8px;">50K+</div>
          <p style="color: #64748b; font-weight: 500;">Monthly Users</p>
        </div>
        <div>
          <div style="font-size: 48px; font-weight: 800; color: #16a34a; margin-bottom: 8px;">99.9%</div>
          <p style="color: #64748b; font-weight: 500;">Accuracy Rate</p>
        </div>
        <div>
          <div style="font-size: 48px; font-weight: 800; color: #dc2626; margin-bottom: 8px;">$50M+</div>
          <p style="color: #64748b; font-weight: 500;">Savings Calculated</p>
        </div>
        <div>
          <div style="font-size: 48px; font-weight: 800; color: #7c3aed; margin-bottom: 8px;">24/7</div>
          <p style="color: #64748b; font-weight: 500;">Always Available</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section style="background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%); padding: 100px 0; color: white;">
    <div class="container" style="text-align: center;">
      <h2 style="font-size: 48px; font-weight: 800; margin-bottom: 24px;">
        🚀 Start Your Wealth Journey Today
      </h2>
      <p style="font-size: 20px; margin-bottom: 48px; opacity: 0.9; max-width: 600px; margin-left: auto; margin-right: auto;">
        Join the thousands who've already saved money and built wealth with our professional tools
      </p>
      <div style="display: flex; gap: 20px; justify-content: center; flex-wrap: wrap;">
        <a href="/calculators" class="btn" style="background: linear-gradient(135deg, #22c55e, #16a34a); font-size: 20px; padding: 20px 40px;">
          💰 Start Calculating
        </a>
        <a href="/articles" class="btn" style="background: rgba(255,255,255,0.1); border: 2px solid rgba(255,255,255,0.3); font-size: 20px; padding: 20px 40px;">
          📚 Read Articles
        </a>
      </div>
    </div>
  </section>

  <!-- Footer Ad -->
  <div class="container">
    <ModernAdSlot 
      client={cfg.adsense_client} 
      slot={cfg.adsense_slots.footer} 
      layout="footer"
    />
  </div>
</ModernBase>

<style>
  .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.2);
  }
  
  [style*="background: white"]:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0,0,0,0.15);
  }
  
  @media (max-width: 768px) {
    .container {
      padding: 0 20px;
    }
  }
</style>
