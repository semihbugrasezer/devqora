---
// /srv/auto-adsense/multidomain_site_kit/sites/playu.co/src/pages/articles/index.astro
import ModernBase from '@mdkit/shared/src/layouts/ModernBase.astro'
import ModernAdSlot from '@mdkit/shared/src/components/ModernAdSlot.astro'
import config from '../../config.json'

const cfg = config['playu.co']
const title = "Gaming Guides & Reviews | PlayU.co"
const description = "Latest gaming guides, reviews, tips and tricks for your favorite games. Stay ahead of the competition with expert gaming content."

// Get all articles dynamically
const allArticles = await Astro.glob('./**.astro')
const articles = allArticles
  .filter(article => article.url !== '/articles/')
  .map(article => {
    const slug = article.url?.replace('/articles/', '').replace('/', '') || ''
    const title = slug.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase())
    return {
      title,
      url: article.url,
      excerpt: `Complete guide to ${title.toLowerCase()}. Pro tips, strategies, and everything you need to know.`
    }
  })
  .slice(0, 12) // Limit to 12 articles
---

<ModernBase 
  title={title} 
  description={description} 
  locale={cfg.locale} 
  adsenseClient={cfg.adsense_client}
  niche="tech"
>
  <!-- Hero Section -->
  <section style="background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%); padding: 80px 0; color: white;">
    <div class="container" style="text-align: center;">
      <h1 style="font-size: clamp(36px, 5vw, 56px); font-weight: 900; margin-bottom: 24px; line-height: 1.1;">
        🎮 Gaming Guides & Reviews
      </h1>
      <p style="font-size: 20px; margin-bottom: 40px; opacity: 0.9; max-width: 600px; margin-left: auto; margin-right: auto;">
        Expert gaming content, pro strategies, and comprehensive reviews to level up your gaming experience
      </p>
    </div>
  </section>

  <!-- Header Ad -->
  <div class="container">
    <ModernAdSlot 
      client={cfg.adsense_client} 
      slot={cfg.adsense_slots.header} 
      layout="header"
    />
  </div>

  <!-- Articles Grid -->
  <section style="padding: 80px 0;">
    <div class="container">
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); gap: 32px;">
        {articles.map((article) => (
          <article style="background: white; border-radius: 16px; overflow: hidden; box-shadow: 0 4px 20px rgba(0,0,0,0.08); border: 1px solid #e5e7eb; transition: all 0.3s ease;" class="article-card">
            <div style="padding: 32px;">
              <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 16px;">
                <span style="background: linear-gradient(135deg, #4834d4, #3742fa); color: white; padding: 6px 12px; border-radius: 8px; font-size: 12px; font-weight: 600;">
                  🎮 GAMING
                </span>
                <span style="color: #64748b; font-size: 12px;">
                  7 min read
                </span>
              </div>
              
              <h2 style="font-size: 22px; font-weight: 700; color: #0f172a; margin-bottom: 12px; line-height: 1.3;">
                {article.title}
              </h2>
              
              <p style="color: #64748b; margin-bottom: 24px; line-height: 1.6;">
                {article.excerpt}
              </p>
              
              <a href={article.url} class="btn" style="background: #4834d4; width: 100%; text-align: center; justify-content: center; display: flex; align-items: center; gap: 8px;">
                Read Guide →
              </a>
            </div>
          </article>
        ))}
      </div>

      <!-- In-Article Ad -->
      <div style="margin: 64px 0;">
        <ModernAdSlot 
          client={cfg.adsense_client} 
          slot={cfg.adsense_slots.in_article} 
          layout="in-article"
        />
      </div>

      <!-- Featured Categories Section -->
      <div style="margin-top: 80px; background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%); padding: 64px; border-radius: 24px; text-align: center;">
        <h2 style="font-size: 32px; font-weight: 800; color: #0f172a; margin-bottom: 16px;">
          🎯 Popular Game Categories
        </h2>
        <p style="color: #64748b; margin-bottom: 32px; font-size: 16px;">
          Explore guides for your favorite game genres
        </p>
        
        <div style="display: flex; gap: 16px; justify-content: center; flex-wrap: wrap;">
          <a href="/category/action" class="btn" style="background: linear-gradient(135deg, #ff6b6b, #ee5a52);">
            ⚔️ Action Games
          </a>
          <a href="/category/rpg" class="btn" style="background: linear-gradient(135deg, #4834d4, #3742fa);">
            🧙 RPG Games
          </a>
          <a href="/category/strategy" class="btn" style="background: linear-gradient(135deg, #00d2d3, #01a3a4);">
            🧠 Strategy Games
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer Ad -->
  <div class="container">
    <ModernAdSlot 
      client={cfg.adsense_client} 
      slot={cfg.adsense_slots.footer} 
      layout="footer"
    />
  </div>
</ModernBase>

<style>
  .article-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 32px rgba(0,0,0,0.12);
  }
  
  .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.2);
  }
  
  @media (max-width: 768px) {
    .container {
      padding: 0 20px;
    }
  }
</style>
