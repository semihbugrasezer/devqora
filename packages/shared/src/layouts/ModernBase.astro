---
// /srv/auto-adsense/multidomain_site_kit/packages/shared/src/layouts/ModernBase.astro
const { title, description, locale, adsenseClient, niche = "finance" } = Astro.props;

// Theme colors based on niche
const themeColors = {
  finance: {
    primary: "#2563eb",
    secondary: "#16a34a", 
    accent: "#dc2626",
    gradient: "linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%)"
  },
  tech: {
    primary: "#4834d4",
    secondary: "#ff6b6b",
    accent: "#00d2d3", 
    gradient: "linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%)"
  }
};

const theme = themeColors[niche];
---

<html lang={locale}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- AdSense Script -->
    <script async src={`https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${adsenseClient}`} crossorigin="anonymous"></script>
    
    <!-- Modern CSS Reset & Base Styles -->
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        line-height: 1.6;
        color: #374151;
        background: #fff;
      }
      
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
      }
      
      .btn {
        display: inline-block;
        padding: 12px 24px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        color: white;
      }
      
      h1, h2, h3, h4, h5, h6 {
        font-weight: 700;
        line-height: 1.2;
        color: #0f172a;
      }
      
      p {
        margin-bottom: 16px;
      }
      
      /* Responsive Grid */
      .grid {
        display: grid;
        gap: 24px;
      }
      
      @media (min-width: 768px) {
        .grid-md-2 { grid-template-columns: repeat(2, 1fr); }
        .grid-md-3 { grid-template-columns: repeat(3, 1fr); }
      }
      
      @media (min-width: 1024px) {
        .grid-lg-4 { grid-template-columns: repeat(4, 1fr); }
      }
      
      /* AdSense Optimization */
      .ad-container {
        min-height: 250px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 24px 0;
      }
    </style>
  </head>
  
  <body>
    <!-- Navigation -->
    <nav style={`background: ${theme.gradient}; padding: 16px 0; position: sticky; top: 0; z-index: 100; backdrop-filter: blur(10px);`}>
      <div class="container">
        <div style="display: flex; align-items: center; justify-content: between; color: white;">
          <div style="display: flex; align-items: center; gap: 12px;">
            <div style="font-size: 24px;">{niche === 'finance' ? 'ðŸ’°' : 'ðŸŽ®'}</div>
            <span style="font-weight: 700; font-size: 18px;">
              {niche === 'finance' ? 'Hing.me' : 'PlayU.co'}
            </span>
          </div>
          
          <div style="display: flex; gap: 24px; margin-left: auto;">
            <a href="/" style="color: rgba(255,255,255,0.9); text-decoration: none; font-weight: 500;">Home</a>
            <a href="/articles" style="color: rgba(255,255,255,0.9); text-decoration: none; font-weight: 500;">Articles</a>
            <a href="/calculators" style="color: rgba(255,255,255,0.9); text-decoration: none; font-weight: 500;">
              {niche === 'finance' ? 'Calculators' : 'Reviews'}
            </a>
            <a href="/guides" style="color: rgba(255,255,255,0.9); text-decoration: none; font-weight: 500;">Guides</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer style="background: #f8fafc; padding: 64px 0 32px; border-top: 1px solid #e5e7eb; margin-top: 80px;">
      <div class="container">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 40px; margin-bottom: 40px;">
          <div>
            <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 16px;">
              <div style="font-size: 32px;">{niche === 'finance' ? 'ðŸ’°' : 'ðŸŽ®'}</div>
              <h3 style="font-size: 20px; color: #0f172a;">
                {niche === 'finance' ? 'Hing.me' : 'PlayU.co'}
              </h3>
            </div>
            <p style="color: #64748b; line-height: 1.6;">
              {niche === 'finance' 
                ? 'Your trusted partner for smart financial decisions. Expert guides, professional calculators, and proven strategies.'
                : 'Your ultimate gaming and entertainment destination. Latest reviews, guides, and gaming insights.'
              }
            </p>
          </div>
          
          <div>
            <h4 style="font-size: 16px; font-weight: 600; margin-bottom: 16px; color: #0f172a;">Quick Links</h4>
            <div style="display: flex; flex-direction: column; gap: 8px;">
              <a href="/articles" style="color: #64748b; text-decoration: none;">Articles</a>
              <a href={niche === 'finance' ? '/calculators' : '/reviews'} style="color: #64748b; text-decoration: none;">
                {niche === 'finance' ? 'Calculators' : 'Reviews'}
              </a>
              <a href="/guides" style="color: #64748b; text-decoration: none;">Guides</a>
            </div>
          </div>
          
          <div>
            <h4 style="font-size: 16px; font-weight: 600; margin-bottom: 16px; color: #0f172a;">Popular</h4>
            <div style="display: flex; flex-direction: column; gap: 8px;">
              <a href={niche === 'finance' ? '/calculators/mortgage' : '/category/action'} style="color: #64748b; text-decoration: none;">
                {niche === 'finance' ? 'Mortgage Calculator' : 'Action Games'}
              </a>
              <a href={niche === 'finance' ? '/calculators/investment' : '/category/rpg'} style="color: #64748b; text-decoration: none;">
                {niche === 'finance' ? 'Investment Tools' : 'RPG Games'}
              </a>
              <a href={niche === 'finance' ? '/guides/wealth-building' : '/category/strategy'} style="color: #64748b; text-decoration: none;">
                {niche === 'finance' ? 'Wealth Building' : 'Strategy Games'}
              </a>
            </div>
          </div>
        </div>
        
        <div style="border-top: 1px solid #e5e7eb; padding-top: 24px; text-align: center;">
          <p style="color: #64748b; font-size: 14px;">
            Â© {new Date().getFullYear()} {niche === 'finance' ? 'Hing.me' : 'PlayU.co'} - 
            {niche === 'finance' ? 'Your Smart Finance Guide' : 'Gaming & Entertainment Hub'}
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
