# Auto AdSense System - Environment Configuration
# Copy this file to .env and configure with your actual API keys

# System Configuration
TZ=Europe/Istanbul
DOMAIN=localhost
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Google Services API Keys (Required for Analytics and AdSense)
GOOGLE_ANALYTICS_API_KEY=your_google_analytics_api_key
GOOGLE_SEARCH_CONSOLE_API_KEY=your_search_console_api_key
GOOGLE_ADSENSE_API_KEY=your_adsense_api_key
GOOGLE_CLIENT_EMAIL=your_service_account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Content\n-----END PRIVATE KEY-----"

# Site Analytics Configuration
HING_GA_PROPERTY_ID=your_hing_analytics_property_id
PLAYU_GA_PROPERTY_ID=your_playu_analytics_property_id
HING_ADSENSE_CLIENT_ID=ca-pub-your_hing_adsense_id
PLAYU_ADSENSE_CLIENT_ID=ca-pub-your_playu_adsense_id

# Pinterest Marketing Configuration
TAILWIND_API_KEY=your_tailwind_api_key
HING_PINTEREST_BOARD_ID=your_hing_board_id
PLAYU_PINTEREST_BOARD_ID=your_playu_board_id

# AI Content Generation APIs
DEEPSEEK_API_KEY=your_deepseek_api_key
GROQ_API_KEY=your_groq_api_key
CLAUDE_API_KEY=your_claude_api_key
OPENAI_API_KEY=your_openai_api_key
HUGGINGFACE_API_KEY=your_huggingface_token
NANO_BANANA_API_KEY=your_nano_banana_api_key

# Automation Settings
DAILY_PIN_TARGET=6
DAILY_ARTICLE_TARGET_PER_DOMAIN=3
DAILY_REPIN_TARGET=3
DAILY_COMMENT_TARGET=2
DAILY_FOLLOW_TARGET=2
WINDOW_START=08:00
WINDOW_END=22:30

# Content Generation Settings
AI_CONTENT_ENABLED=true
ARTICLE_GENERATION_ENABLED=true
IMAGE_GENERATION_ENABLED=true
AUTO_POSTING_ENABLED=true
MAX_ARTICLE_LENGTH=2500
MIN_ARTICLE_LENGTH=1500

# Quality Control
CONTENT_QUALITY_CHECK=true
DUPLICATE_CONTENT_CHECK=true
SEO_OPTIMIZATION=true
MOBILE_OPTIMIZATION=true

# Domain Configuration
DOMAIN_ROTATION=https://hing.me,https://playu.co