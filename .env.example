# Auto AdSense System - Real API Configuration
# Copy this to .env and fill in your real API keys

TZ=Europe/Istanbul
DOMAIN=localhost

# REQUIRED: Google APIs (for real analytics data)
GOOGLE_ANALYTICS_API_KEY=your_google_analytics_api_key_here
GOOGLE_SEARCH_CONSOLE_API_KEY=your_search_console_api_key_here
GOOGLE_ADSENSE_API_KEY=your_adsense_api_key_here
GOOGLE_CLIENT_EMAIL=your_service_account_email@your-project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----"

# REQUIRED: Site-specific Google Analytics Property IDs
HING_GA_PROPERTY_ID=your_hing_ga_property_id
PLAYU_GA_PROPERTY_ID=your_playu_ga_property_id

# REQUIRED: AdSense Client IDs
HING_ADSENSE_CLIENT_ID=ca-pub-your_hing_client_id
PLAYU_ADSENSE_CLIENT_ID=ca-pub-your_playu_client_id

# REQUIRED: Pinterest Board IDs (for Tailwind or direct Pinterest posting)
HING_PINTEREST_BOARD_ID=your_hing_pinterest_board_id
PLAYU_PINTEREST_BOARD_ID=your_playu_pinterest_board_id

# REQUIRED: Tailwind API (for Pinterest posting)
TAILWIND_API_KEY=your_tailwind_api_key_here

# REQUIRED: Nano Banana API (for image generation)
NANO_BANANA_API_KEY=your_nano_banana_api_key_here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Bot behavior
DAILY_PIN_TARGET=6
DAILY_REPIN_TARGET=3
DAILY_COMMENT_TARGET=2
DAILY_FOLLOW_TARGET=2
DOMAIN_ROTATION=https://hing.me,https://playu.co
WINDOW_START=08:00
WINDOW_END=22:30

# Content Generation Settings
ARTICLE_GENERATION_ENABLED=true
IMAGE_GENERATION_ENABLED=true
AUTO_POSTING_ENABLED=true

# Optional: Additional AI APIs
OPENAI_API_KEY=your_openai_key_for_enhanced_content
CLAUDE_API_KEY=your_claude_key_for_enhanced_content

# ÜCRETSIZ AI API'LER (İçerik Üretimi için)
# DeepSeek - Çok ucuz, kaliteli AI (https://platform.deepseek.com/)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Claude Haiku - Anthropic'in hızlı modeli (https://console.anthropic.com/)
CLAUDE_API_KEY=your_claude_api_key_here

# Groq - Ücretsiz, çok hızlı LLM (https://console.groq.com/)
GROQ_API_KEY=your_groq_api_key_here

# Hugging Face - Ücretsiz AI modelleri (https://huggingface.co/settings/tokens)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Nano Banana - Ücretsiz resim üretimi (https://www.nanobana.com/api)
NANO_BANANA_API_KEY=your_nano_banana_api_key_here

# AI İçerik Ayarları
AI_CONTENT_ENABLED=true
DAILY_ARTICLE_TARGET_PER_DOMAIN=3
MAX_ARTICLE_LENGTH=2500
MIN_ARTICLE_LENGTH=1500

# İçerik Kalite Kontrolü
CONTENT_QUALITY_CHECK=true
DUPLICATE_CONTENT_CHECK=true
SEO_OPTIMIZATION=true
MOBILE_OPTIMIZATION=true

# ========== TAILWIND API SETUP ==========
# BEST CHOICE: Instant Pinterest posting without approval
TAILWIND_API_KEY=your_tailwind_api_key_here
# Get from: https://www.tailwindapp.com/api
# FREE TRIAL: 100 pins, then $15/month unlimited
# No approval needed vs Pinterest API (2-4 weeks wait)

# PINTEREST NATIVE BOARDS (for each account)
HING_PINTEREST_BOARD_ID=your_hing_board_id_here
PLAYU_PINTEREST_BOARD_ID=your_playu_board_id_here

